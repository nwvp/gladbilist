<section class="max-w-xl mx-auto text-center my-12 px-4">
  <h2 class="text-2xl font-bold mb-4">üéµ Velkomstsang</h2>

  <audio id="audioPlayer" preload="auto">
    <source src="/audio/Intro.mp3" type="audio/mpeg" />
    Din browser underst√∏tter ikke lydafspilning.
  </audio>

  <div class="flex flex-col items-center gap-4">
    <!-- Play/Stop knap -->
    <button id="togglePlay"
      class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-6 rounded-full shadow transition duration-300">
      ‚ñ∂Ô∏è Afspil
    </button>

    <!-- Progress bar -->
    <input type="range" id="seekBar" value="0" min="0" step="1"
      class="w-full max-w-md accent-blue-600 cursor-pointer" />

    <!-- Tidst√¶ller -->
    <div id="timeDisplay" class="text-sm text-gray-700 font-mono">
      00:00 / 00:00
    </div>
  </div>

  <script type="module">
    const audio = document.getElementById("audioPlayer");
    const playBtn = document.getElementById("togglePlay");
    const seekBar = document.getElementById("seekBar");
    const timeDisplay = document.getElementById("timeDisplay");

    let isPlaying = false;

    // Format seconds to mm:ss
    const formatTime = (secs) => {
      const min = Math.floor(secs / 60);
      const sec = Math.floor(secs % 60);
      return `${min.toString().padStart(2, "0")}:${sec.toString().padStart(2, "0")}`;
    };

    // Opdater l√¶ngde og maks p√• bar n√•r metadata er loadet
    audio.addEventListener("loadedmetadata", () => {
      seekBar.max = Math.floor(audio.duration);
      timeDisplay.textContent = `00:00 / ${formatTime(audio.duration)}`;
    });

    // Knap: Play / Stop
    playBtn.addEventListener("click", () => {
      if (!isPlaying) {
        audio.play().then(() => {
          playBtn.textContent = "‚è∏Ô∏è Stop";
          isPlaying = true;
        }).catch(err => {
          console.error("Fejl ved afspilning:", err);
        });
      } else {
        audio.pause();
        playBtn.textContent = "‚ñ∂Ô∏è Afspil";
        isPlaying = false;
      }
    });

    // Opdater seekbar og tid under afspilning
    audio.addEventListener("timeupdate", () => {
      seekBar.value = Math.floor(audio.currentTime);
      timeDisplay.textContent = `${formatTime(audio.currentTime)} / ${formatTime(audio.duration)}`;
    });

    // Brugeren √¶ndrer bar
    seekBar.addEventListener("input", () => {
      audio.currentTime = seekBar.value;
    });

    // Reset n√•r sang slutter
    audio.addEventListener("ended", () => {
      playBtn.textContent = "‚ñ∂Ô∏è Afspil";
      isPlaying = false;
    });
  </script>
</section>
